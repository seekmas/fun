{% extends '::bootstrap3.html.twig' %}

{% block body -%}
    <h1>Program list</h1>

    <table class="table table-bordered table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Summary</th>
                <th>Sortid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_program_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.summary }}</td>
                <td>{{ entity.sortId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_program_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_program_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_program_new') }}">
                创建新课程
            </a>
        </li>
    </ul>
    {% endblock %}
