{% extends "::login_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}

<div class="" align="center">

<form class="form-signin" role="form" action="{{ path("fos_user_security_check") }}" method="post">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <h2 class="form-signin-heading">Please sign in</h2>

    <div class="control-group">
    	<label for="username">{{ 'security.login.username'|trans }}</label>
    	<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>

    <div class="control-group">
    	<label for="password">{{ 'security.login.password'|trans }}</label>
    	<input class="form-control" type="password" id="password" name="_password" required="required" />
    </div>

    <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <div class="control-group">
    	<input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
</form>

</div>

{% endblock fos_user_content %}
