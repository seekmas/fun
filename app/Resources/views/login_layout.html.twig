{% extends "::base_pure.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset( 'bundles/bootstrap3/dist/css/bootstrap.css' ) }}" />
    <link rel="stylesheet" href="{{ asset( 'bundles/bootstrap3/dist/css/bootstrap-theme.css' ) }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/bmatznerfontawesome/css/font-awesome.min.css') }}" />
    <link rel="stylesheet" href="{{ asset( 'bundles/mc/css/login.css' ) }}" />
{% endblock %}

{% block head_javascripts %}
    <script charset="utf-8" src="{{ asset( 'bundles/bootstrap3/dist/js/jquery-1.9.1.js') }}"></script>
    <script charset="utf-8" src="{{ asset( 'bundles/bootstrap3/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}

{% block body %}
     
        <div class="container" style="margin-top:10px;"><div class="row">
            <div class="col-md-12">
                <div>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        
                    {% endif %}
                </div>

                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="flash-{{ type }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                <div>
                    {% block fos_user_content %}
                    {% endblock fos_user_content %}
                </div>
            </div>

        </div></div>

        {% block javascripts %}{% endblock %}

{% endblock %}

